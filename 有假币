// write your code here cpp
#include<iostream>
using namespace std;
int main()
{
    int n;
    while(cin>>n)
    {
        if(n==0)
            continue;
        int count=0;
        while(n>1)
        {
            if(n%3!=0)
                n=n/3+1;
            else
                n/=3;
            count++;
        }
        cout<<count<<endl;
    }
    return 0;
}
